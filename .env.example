# ==========================================
# AGENT ZERO ENTERPRISE CONFIGURATION
# ==========================================

# Core Identity
AGENT_NAME=Enterprise-Agent-Zero
ORGANIZATION_NAME=Your-Enterprise
DEPLOYMENT_ENV=production

# AI Provider Keys (Required at least one)
OPENROUTER_API_KEY=sk-or-v1-...
OPENAI_API_KEY=sk-proj-...
ANTHROPIC_API_KEY=sk-ant-...
AZURE_OPENAI_KEY=...
AZURE_OPENAI_ENDPOINT=https://...

# Model Configuration
CHAT_MODEL=openrouter/aurora-alpha
UTILITY_MODEL=openrouter/aurora-alpha
WEB_MODEL=openrouter/aurora-alpha

# Security & Authentication (Required)
AUTH_SECRET=your-super-secret-jwt-key-min-32-chars-change-this-in-production
ADMIN_USERNAME=admin
ADMIN_PASSWORD_HASH=$2b$12$... # bcrypt hash
API_KEY_REQUIRED=true
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Database & Memory (Railway auto-injects these)
# MEMORY_BACKEND=persistent
# REDIS_URL=${{Redis.REDIS_URL}}
# DATABASE_URL=${{Postgres.DATABASE_URL}}
KNOWLEDGE_BASE_PATH=/app/data/knowledge

# Agent Behavior Configuration
MAX_AGENT_DEPTH=5
MAX_SUBORDINATES_PER_AGENT=3
ENABLE_SUBORDINATES=true
DEFAULT_AGENT_MODEL=gpt-4
FALLBACK_MODEL=gpt-3.5-turbo
MAX_ITERATIONS=20

# Rate Limiting & Quotas
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
MAX_TOKENS_PER_MINUTE=100000
MAX_UPLOAD_SIZE=100MB

# Performance Tuning
WORKERS=4
MAX_CONCURRENT_AGENTS=10
WEB_CONCURRENCY=4
PYTHONUNBUFFERED=1

# Monitoring & Observability
LOG_LEVEL=INFO
AUDIT_LOG_ENABLED=true
AUDIT_LOG_PATH=/app/logs/audit.log
METRICS_ENABLED=true
SENTRY_DSN=https://...sentry.io/...

# Feature Flags
ENABLE_FILE_SYSTEM=true
ENABLE_WEB_SEARCH=true
ENABLE_CODE_EXECUTION=true
ENABLE_SSH=false
SANDBOX_MODE=true
ALLOWED_TOOLS=read,write,search,browser,python

# Compliance & Security
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=90
ENCRYPTION_AT_REST=true
SESSION_TIMEOUT=3600
REQUIRE_AUTHENTICATION=true

# Railway Specific
PORT=80
RAILWAY_ENVIRONMENT=production
RAILWAY_HEALTHCHECK_TIMEOUT=300
